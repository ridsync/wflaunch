<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/RL_APPBAR_ROOT_BG"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_height"
        android:background="@color/main_appbar_bg_color"/>

    <!--  Sub Fragment TEXTBOX Toolbar-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_height">

        <ImageButton
            android:id="@+id/IB_APPBAR_MENU"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_menu"
            android:background="@null"
            android:visibility="gone"/>

        <ImageButton
            android:id="@+id/IB_APPBAR_BACK"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_back_arrow"
            android:background="@null"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical">

        <ImageView
            android:id="@+id/TV_APPBAR_TEXT_LOGO"
            android:layout_width="234dp"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_small"
            android:layout_marginRight="7dp"
            android:layout_toLeftOf="@+id/TV_APPBAR_TEXT"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:visibility="gone"/>

            <TextView
                android:id="@+id/TV_APPBAR_TEXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="오늘의 메뉴는?"
                android:textColor="@color/main_text_primary"
                android:textSize="@dimen/main_text_title2" />

            <ImageView
                android:id="@+id/IV_APPBAR_STEP1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_step1"
                android:layout_marginLeft="12dp"
                android:layout_centerVertical="true"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/IV_APPBAR_STEP2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_step2"
                android:layout_marginLeft="12dp"
                android:layout_centerVertical="true"
                android:visibility="gone"/>
        </LinearLayout>
        <TextView
            android:id="@+id/TV_APPBAR_LOGOUT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="21dp"
            android:singleLine="true"
            android:text="로그아웃"
            android:textColor="@color/main_text_secondary"
            android:textSize="@dimen/main_text_caption"
            android:visibility="gone"/>

        <Button
            android:id="@+id/IB_APPBAR_ACTION"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="21dp"
            android:background="@drawable/selector_appbar_button_trans_color_bg_oval_90dp"
            android:text="다음"
            android:textColor="@drawable/selector_button_login_text_color"
            android:textSize="@dimen/main_text_title2"
            android:visibility="gone"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/main_list_divider"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

</RelativeLayout>
