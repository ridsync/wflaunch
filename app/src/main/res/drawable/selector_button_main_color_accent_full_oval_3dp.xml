<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape
            android:shape="rectangle"
            android:visible="true">
            <solid android:color="@color/main_primary_dark_color" />
            <corners android:topLeftRadius="0dp" android:bottomLeftRadius="3dp" android:bottomRightRadius="3dp" android:topRightRadius="3dp"/>
        </shape></item>

    <item ><shape
        android:shape="rectangle"
        android:visible="true">
        <solid android:color="@color/main_primary_color" />
        <corners android:topLeftRadius="0dp" android:bottomLeftRadius="3dp" android:bottomRightRadius="3dp" android:topRightRadius="0dp"/>
    </shape></item>

</selector>